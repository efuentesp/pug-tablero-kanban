mixin menu-item(id, label, link, count, selected=false)
  - var _a_class = (selected ? "bg-gray-200" : "")
  - var _label_class = (selected ? "text-gray-900" : "text-gray-700")

  a.flex.justify-between.items-center.px-3.py-2.rounded-lg(id=id class=_a_class href=link)
    span.text-sm.font-medium(class=_label_class)= label
    if count > 0
      span.text-xs.font-semibold.text-gray-700= count